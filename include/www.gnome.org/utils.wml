# Tag to put the time a page last changed.
<defun set-last-changed>
<define-tag last-changed>
<set-var raw-last-changed="%0">
<:{
	my $tmpvar = '<get-var raw-last-changed>';
	if($tmpvar =~ /^\$Date$$/) {
		$tmpvar =~ s/^\$Date:\s*//g;
		$tmpvar =~ s/\s*\$$//g;
		print $tmpvar;
	}
}:>
</define-tag>
</defun>
