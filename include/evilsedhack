#!/bin/sh
PAGE=$1
ROOT=$2

sed "s,<head>,<head><link rel=\"stylesheet\" type=\"text/css\" href=\"$ROOT/default.css\"><link rel=\"icon\" type=\"image/png\" href=\"$ROOT/img/gnome-16.png\">,i;s,<body[^>]*>,<body><div id=\"body\">,i;/<\/body>/,//d" $PAGE

cat <<-FOOT
</div>

<div id="sidebar">
	<p class="section">Users</p>
	<ul>
		<li><a href="http://www.gnome.org/intro/findout.html">What is GNOME?</a></li>
		<li><a href="http://www.gnomedesktop.org/">Community News</a></li>
		<li><a href="http://www.gnome.org/start/2.2/">Get GNOME!</a></li>
		<li><a href="http://www.gnome.org/learn/">Learn to use GNOME</a></li>
		<li><a href="http://www.gnome.org/faqs/">Frequently Asked Questions</a></li>
		<li><a href="http://www.gnome.org/resources/">Resources</a></li>
		<li><a href="http://www.gnome.org/softwaremap/">Software Map</a></li>
		<li><a href="http://mail.gnome.org/">Mailing Lists</a></li>
	</ul>
	
	<p class="section">Developers</p>
	<ul>
		<li><a href="http://developer.gnome.org/">Developer Site</a></li>
		<li><a href="http://cvs.gnome.org/lxr/">LXR</a></li>
		<li><a href="http://cvs.gnome.org/bonsai/">Bonsai</a></li>
		<li><a href="http://ftp.gnome.org/pub/GNOME/MIRRORS.html">FTP</a></li>
		<li><a href="http://bugzilla.gnome.org/">Bugzilla</a></li>
	</ul>
</div>

<div id="hdr">
	<div id="logo"><a href="$ROOT/"><img src="$ROOT/img/spacer" alt="Home" /></a></div>
	<div id="banner"><img src="$ROOT/img/spacer" alt="" /></div>
	<p class="none"></p>
	<div id="hdrNav">
		<a href="http://www.gnome.org/intro/findout.html">About GNOME</a> &middot;
		<a href="http://www.gnome.org/start/2.2/">Download</a> &middot;
		<!--<a href="http://www.gnome.org/contribute/"><i>Get Involved!</i></a> &middot;-->
		<a href="http://www.gnome.org/"><b>Users</b></a> &middot;
		<a href="http://developer.gnome.org/">Developers</a> &middot;
		<a href="http://foundation.gnome.org/">Foundation</a> &middot;
		<a href="mailto:webmaster@gnome.org">Contact</a>
	</div>
</div>

<div id="copyright">
