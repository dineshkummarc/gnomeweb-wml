<?php

require "html.class";

class Theme extends HTML
{
	/* Page vars */
	var $COLOR_TEXT = "#000000";
	var $COLOR_LINK = "#660000";
	var $COLOR_LINK_VISITED = "#400000";
	var $COLOR_LINK_ACTIVE = "#900000";
	var $COLOR_BACKGROUND = "#FFFFFF";
	var $FONT_PAGE = "helvetica, arial, sans";
	var $IMG_PAGE_BACKGROUND = "background.gif";
	
	/* Header vars */
	var $COLOR_HEADER_LINK = "#540000";
	var $FONT_HEADER_LINK = "helvetica, arial, sans";
	var $IMG_HEADER_BACKGROUND = "top-desert.gif";
	
	/* Menu vars */
	var $FONT_MENU_LINK = "helvetica, arial, sans";
	var $IMG_MENU_LOGO = "logo-desert.gif";
	
	function header($params = 0)
	{
		$output = "<html>\n<head>\n\t<title>";
		if ($params['title'])
		{
			$output .= "GNOME - ".$params['title'];
		}
		else
		{
			$output .= "GNOME - Computing Made Easy";
		}
		$output .= "</title>\n</head>\n\n"
			. "<body bgcolor=\"".$this->COLOR_BACKGROUND."\" "
			. "leftmargin=\"0\" topmargin=\"0\" marginwidth=\"0\" marginheight=\"0\" "
			. "background=\"".$GLOBALS['sys_img_dir']."/".$this->IMG_PAGE_BACKGROUND."\" "
			. "text=\"".$this->COLOR_TEXT."\" link=\"".$this->COLOR_LINK."\" "
			. "vlink=\"".$this->COLOR_LINK_VISITED."\" alink=\"".$this->COLOR_LINK_ACTIVE."\">\n\n";

		/* This is the top header for the page with the pretty background, changeable by theme */
		$output .= "<table width=\"100%\" border=\"0\" cellspacing=\"0\" cellpadding=\"0\" "
			. "background=\"".$GLOBALS['sys_img_dir']."/".$this->IMG_HEADER_BACKGROUND."\">"
			. "\n<tr>\n\t<td align=\"right\" valign=\"center\">"
			. $this->img("nil.gif", "52", "4", "", "right")
			. $this->img("nil.gif", "14", "1")
			. "<br><font face=\"".$this->FONT_HEADER_LINK."\" color=\"".$this->COLOR_HEADER_LINK."\">"
			. "<b>About | Community | Development | Foundation | Projects | Software | News</b></font>"
			. "</td>\n</tr>\n</table>\n\n";

		/* 
		 * This is the main page layout table, along with the beginning of the menu cell.
		 * The menu cell content should probably be moved elsewhere as not all pages will want the 
		 * foot hanging around
		 */
		$output .= "<table width=\"100%\" border=\"0\" cellspacing=\"0\" cellpadding=\"0\" align=\"left\">"
			. "\n<tr valign=\"top\">\n\t<td width=\"10\" rowspan=\"2\">"
			. $this->img("nil.gif", "1", "10")."</td>\n\t<td width=\"186\">"
			. $this->img($this->IMG_MENU_LOGO, "155", "186", "GNOME Foot")
			. "<br clear=\"all\">";

		/* kick out all the menu links */
		$output .= $this->menu();

		/* Add the separator and prepare the main content cell */
		$output .= "</td>\n\t<td width=\"26\">". $this->img("nil.gif", "1", "26")."</td>"
			. "\n\t<td><font face=\"".$this->FONT_PAGE."\">"
			. $this->img("nil.gif", "10", "1")."<br>\n\n";
		
		return $output;
	}

	function menu()
	{
		return "<font face=\"".$this->FONT_MENU_LINK."\">"
			. "<b>Section</b>\n<br>\n"
			. $this->img("nil.gif", "4", "16")."Subsection<br>\n"
			. $this->img("nil.gif", "4", "16")."Subsection<br>\n"
			. $this->img("nil.gif", "4", "16")."Subsection<br>\n"
			. $this->img("nil.gif", "4", "32")."Subsubsection<br>\n"
			. $this->img("nil.gif", "4", "32")."Subsubsection<br>\n"
			. $this->img("nil.gif", "4", "16")."Subsection<br>\n"
			. "</font>\n";
	}
	
	function footer($params = 0)
	{
		$output = "\n\t<td width=\"26\">". $this->img("nil.gif", "1", "26")."</td>"
			. "\n\t</td>\n</tr>\n</table>\n\n</body>\n</html>";

		return $output;
	}
}

?>
