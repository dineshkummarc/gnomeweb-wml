<?php

class HTML
{
	function img($src, $height, $width, $alt = "", $args = "")
	{
		$output = "<img src=\"".$GLOBALS['sys_http_domain']."/images/".$src."\" "
			. "height=\"".$height."\" width=\"".$width."\" alt=\"".$alt."\" ";

		if ($args['align']) $output .= " align=\"".$align."\" ";
		if (!$args['border']) $output .= " border=\"0\" ";
		$output .= ">";

		return $output;
	}
}

?>
